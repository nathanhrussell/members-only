<%- include("layout") %>

<h1>Post a New Message</h1>

<form action="/new-message" method="POST">
  <label>Title:<br><input type="text" name="title" required></label><br>
  <label>Message:<br><textarea name="text" rows="5" required></textarea></label><br>
  <button type="submit">Post Message</button>
</form>

<% if (error) { %>
  <p style="color: red;"><%= error %></p>
<% } %>

<% if (success) { %>
  <p style="color: green;"><%= success %></p>
<% } %>

