<%- include("layout") %>

<h1>Messages</h1>

<% if (success) { %>
  <p style="color: green;"><%= success %></p>
<% } %>

<% if (messages.length === 0) { %>
  <p>No messages yet.</p>
<% } else { %>
  <% messages.forEach(msg => { %>
    <div style="margin-bottom: 2rem;">
      <h3><%= msg.title %></h3>
      <p><%= msg.text %></p>

      <% if (userIsMember) { %>
        <small>
          Posted by <%= msg.author %> on <%= new Date(msg.timestamp).toLocaleString() %>
        </small>
      <% } %>
    </div>
  <% }) %>
<% } %>
