<%- include("layout") %>

<h1>Join the Club</h1>

<form action="/join-club" method="POST">
  <label>Enter the secret club code:
    <input type="password" name="code" required>
  </label><br>
  <button type="submit">Join</button>
</form>

<% if (error) { %>
  <p style="color: red;"><%= error %></p>
<% } %>

<% if (success) { %>
  <p style="color: green;"><%= success %></p>
<% } %>
